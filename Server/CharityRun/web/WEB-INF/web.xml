<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getCampaigns</servlet-name>
        <servlet-class>getCampaigns</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewCampaign</servlet-name>
        <servlet-class>addNewCampaign</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getProfile</servlet-name>
        <servlet-class>getProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateCampaign</servlet-name>
        <servlet-class>updateCampaign</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginSociety</servlet-name>
        <servlet-class>loginSociety</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewCampaigns</servlet-name>
        <servlet-class>viewCampaigns</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getCampaigns</servlet-name>
        <url-pattern>/getCampaigns</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewCampaign</servlet-name>
        <url-pattern>/addNewCampaign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getProfile</servlet-name>
        <url-pattern>/getProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateCampaign</servlet-name>
        <url-pattern>/updateCampaign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginSociety</servlet-name>
        <url-pattern>/loginSociety</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewCampaigns</servlet-name>
        <url-pattern>/viewCampaigns</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
